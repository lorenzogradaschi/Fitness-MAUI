<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DSR.DashboardPage"
             Title="Dashboard">
    <!-- Overall Layout -->
    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="FillAndExpand">

        <!-- Welcome Label -->
        <Label Text="Welcome to Your Gym Dashboard!"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Style="{StaticResource WelcomeLabelStyle}"/>

        <!-- Clock Label -->
        <Label Text="{Binding CurrentTime}" 
               FontSize="Medium"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Blue"
               HorizontalTextAlignment="Center"
               Padding="10,0"/>

        <!-- Gym Features List -->
        <CollectionView ItemsSource="{Binding GymFeatures}" VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5"
                           Style="{StaticResource FeatureFrameStyle}">
                        <StackLayout>
                            <Label Text="{Binding Title}"
                                   FontSize="Medium"
                                   FontAttributes="Bold"
                                   Style="{StaticResource FeatureTitleStyle}"/>
                            <Label Text="{Binding Description}"
                                   FontSize="Small"
                                   Style="{StaticResource FeatureDescriptionStyle}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Logout" 
                HorizontalOptions="Center"
                Clicked="OnLogoutClicked" 
                BackgroundColor="Red" 
                TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
