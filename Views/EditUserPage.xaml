<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DSR.EditUserPage"
             Title="Edit User">

    <StackLayout Padding="20">
        <Entry x:Name="NameEntry" Placeholder="Name" Text="{Binding CurrentUser.Name}" />
        <Entry x:Name="SurnameEntry" Placeholder="Surname" Text="{Binding CurrentUser.Surname}" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Text="{Binding CurrentUser.Email}" />
        <Entry x:Name="DOBEntry" Placeholder="Date of Birth" Text="{Binding CurrentUser.DateOfBirth, StringFormat='{0:yyyy-MM-dd}'}" />
        <Entry x:Name="AgeEntry" Placeholder="Age" Text="{Binding CurrentUser.Age}" />
        <Entry x:Name="CountryEntry" Placeholder="Country" Text="{Binding CurrentUser.Country}" />
        <Entry x:Name="EMSOEntry" Placeholder="EMSO" Text="{Binding CurrentUser.EMSO}" />
        <Entry x:Name="POBEntry" Placeholder="Place of Birth" Text="{Binding CurrentUser.PlaceOfBirth}" />
        <Button Text="Save Changes" Command="{Binding SaveCommand}" />
    </StackLayout>

</ContentPage>
